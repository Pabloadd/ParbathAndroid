<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacionToilet"
    tools:layout_editor_absoluteY="81dp">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></android.support.v4.view.ViewPager>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/descri"
                        android:layout_width="147dp"
                        android:layout_height="30dp"
                        android:text="Descripción"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="248dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="81dp"
                        android:layout_height="26dp"
                        app:srcCompat="@drawable/logoubicacion"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="283dp" />

                    <TextView
                        android:id="@+id/txtUbicacion"
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:text="TextView"
                        android:textColor="@android:color/background_dark"
                        tools:layout_editor_absoluteX="188dp"
                        tools:layout_editor_absoluteY="283dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="81dp"
                        android:layout_height="26dp"
                        android:layout_above="@+id/imageView8"
                        android:layout_toStartOf="@+id/txtUbicacion"
                        app:srcCompat="@drawable/horario"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="310dp" />

                    <TextView
                        android:id="@+id/txtHorario"
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:text="TextView"
                        android:textColor="#000"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="192dp"
                        tools:layout_editor_absoluteY="316dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="81dp"
                        android:layout_height="26dp"

                        app:srcCompat="@drawable/estado"
                        tools:layout_editor_absoluteX="82dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <TextView
                        android:id="@+id/txtEstado"
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:text="TextView"
                        android:textColor="@android:color/background_dark"
                        tools:layout_editor_absoluteX="181dp"
                        tools:layout_editor_absoluteY="348dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="44dp"
                        android:layout_height="28dp"

                        android:layout_alignStart="@+id/imageView8"
                        app:srcCompat="@drawable/prevencion"
                        tools:layout_editor_absoluteX="88dp"
                        tools:layout_editor_absoluteY="377dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/holo_red_dark"
                        android:text="Reporte"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="168dp"
                        tools:layout_editor_absoluteY="376dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:paddingBottom="3dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más información"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtMoreInfo"
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:text="TextView"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:verticalScrollbarPosition="right"
                        app:autoSizeMaxTextSize="50dp" />
                </TableRow>

            </TableLayout>

            <ListView
                android:id="@+id/listaComentarios"
                android:layout_width="match_parent"
                android:layout_height="298dp" />

        </LinearLayout>

    </ScrollView>

    <!--
    <ImageView
        android:id="@+id/imgbtn_speaker"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:contentDescription="Botón que pasará de texto a voz la información presentada"
        android:focusable="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" /> -->

    <ImageView
        android:id="@+id/imgbtn_reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_red_dark"
        android:clickable="true"
        android:contentDescription="@string/desc_btn_reporte"
        android:focusable="auto"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/prevencion" />


</android.support.constraint.ConstraintLayout>